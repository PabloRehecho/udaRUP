
<h2> Componente rup_list </h2>

{{> _listFilterForm}}
<div id="rup-list-feedback" />
<div id="rup-list-content">
    <fieldset id="rup-list-header">
        <div class="row">
            <div class="col-md-4">
                <label for="rup-list-header-rowNum">Elementos por página:</label>
                <select id="rup-list-header-rowNum"/>
            </div>
            <!-- Ordenar por -->
            <div class="col-md-4">
                <label for="rup-list-header-sidx">Ordenar por:</label>
                <select id="rup-list-header-sidx"/>
                <button id="rup-list-header-sord">
                    <i class="mdi mdi-sort"/>
                </button>
            </div>
            <!-- Navegación -->
            <div class="col-md-4">
                <nav id="rup-list-header-nav"/>
            </div>
        </div>
    </fieldset>
    <div id="rup-list"></div>
    <div id="rup-list-itemTemplate" class="row" style="border: 1px solid gray; display:flex;margin:3px;">
        <div class="col-md-1" style="border-right: 1px solid gray;display:flex;justify-content:center;align-items:center;">
            <span class="mdi mdi-account-circle" style="transform:scale(2);"/>
        </div>
        <div class="col-md-2" style="border-right: 1px solid gray;display:flex;align-items:center;flex-direction:column;">
            <b><span id="usuario_label" style="border-bottom: 1px gray solid;"/></b>
            <span id="usuario_value"/>
        </div>
        <div class="col-md-2" style="border-right: 1px solid gray;">
            <p><span class="mdi mdi-email"/><span id="email_label"/></p>
            <p><span id="email_value"/></p>
        </div>

    </div>
</div>